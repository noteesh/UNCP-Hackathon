# AURA Backend environment

# Gemini (direct mode fallback)
GEMINI_API_KEY=your_gemini_api_key_here

# Environment: testing | production
AURA_ENV=testing

# Optional runtime research fetch (normally keep false in production)
ENABLE_RESEARCH_FETCH=false

# Backboard memory mode (recommended for lower per-request input tokens)
USE_BACKBOARD_MEMORY=false
BACKBOARD_API_KEY=your_backboard_api_key_here
BACKBOARD_BASE_URL=https://app.backboard.io/api
# Optional explicit IDs (if set, service reuses them and skips creation)
BACKBOARD_ASSISTANT_ID=
BACKBOARD_THREAD_ID=
# Backboard model selection; keep aligned with your environment/model policy
BACKBOARD_MODEL=
